[core]
    editor = vim
    excludesfile = ~/.gitignore
[github]
    user = mal
[push]
    default = upstream
[rebase]
    autosquash = true
[rerere]
    enabled = true
    autoupdate = true
[user]
    name = Mal Graty
    email = mal.graty@googlemail.com

[alias]
    br = branch
    ci = commit
    co = checkout
    df = diff
    dfs = diff --staged
    pr = pull --rebase
    st = status -sb

    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --date-order
    lga = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --date-order --branches --remotes

[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    whitespace = red reverse
    meta = yellow
    old = red
    new = green
[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[diff]
	tool = vimdiff
[difftool]
	prompt = false
